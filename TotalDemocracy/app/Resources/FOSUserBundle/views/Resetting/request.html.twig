{% extends "::base.html.twig" %}

{% block content %}

    <h1>Reset Password</h1>

    <div class="panel panel-default">
        <div class="panel-body">

            <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form-horizontal">
                <div class="form-group">
                    {% if invalid_username is defined %}
                        <p>Invalid Email: {{ invalid_username }}</p>
                    {% endif %}
                    <label class="col-sm-1 control-label" for="username">Email </label>
                    <div class="col-sm-3">
                        <input class="form-control" type="text" id="username" name="username" required="required" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-1 col-sm-1">
                        <input class="btn btn-success" type="submit" value="Reset" />
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
